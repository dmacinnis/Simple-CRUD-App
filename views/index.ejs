<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="main.css">
        <title>Star Wars Quote App</title>
    </head>

    <body>
        <h1>May Node and Express be with you.</h1>

        <form action="/quotes" method="POST">
            <input type="text" placeholder="name" name="name" />
            <input type="text" placeholder="quote" name="quote" />
            <button type="submit">Submit</button>
        </form>

        <div>
            <h2>Darth Vader Invades!</h2>
            <p>
                Replace the first Yoda quote with a quote spoken by Darth Vader
            </p>
            <button id="update-button">Replace Yoda's Quote</button>
        </div>

        <div>
            <h2>Remove Darth Vader!</h2>
            <p>
                Delete one of Darth Vader's quotes. Does nothing if there are no more Darth Vader quotes.
            </p>
            <button id="delete-forever">Delete Darth Vader's quote</button>
        </div>

        <div id="message"></div>

        <div class="quotes">
        <h2> Quotes </h2>

        <ul >
            <!-- Loop through quotes -->
            <% for(var i = 0; i < quotes.length; i++) {%>
                <li class="quote">
                    <!-- Output name from the iterated quote object -->
                    <span><%= quotes[i].name %></span>:
                    <!-- Output quote from the iterated quote object -->
                    <span><%= quotes[i].quote %></span>
                </li>
            <% } %>
        </ul>
        </div>

    <script src="/main.js"></script>
    </body>
</html>